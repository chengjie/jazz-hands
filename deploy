#! /usr/bin/env bash

OPTIONS="commit test deploy"

select opt in $OPTIONS; do
  if [ "$opt" = "commit" ]; then
    eval "find . -name *.pyc -print0 | xargs -0 rm"
    
    echo Enter comment
    read COMMENT
    eval "git add ."
    eval "git commit -m \"$COMMENT\""
    eval "git push"
    exit
  fi
done
